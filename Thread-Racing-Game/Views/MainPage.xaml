<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:Custom="using:Microsoft.UI.Xaml.Controls"
    x:Class="Thread_Racing_Game.Views.MainPage"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
        <TextBlock x:Name="Time" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="test" HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="Hello"/></TextBlock>

        <canvas:CanvasControl x:Name="raceCanvas" CreateResources="GameCanvas_CreateResources" Draw="GameCanvas_Draw" IsTapEnabled="True" Opacity="0.5"/>
        <Custom:NumberBox HorizontalAlignment="Center" Margin="0,545,0,0" VerticalAlignment="Top"/>
        <Button x:Name="weaterButton" Content="Get random weater" Click="weaterButtonClick" Margin="0,718,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>



    </Grid>
</Page>
